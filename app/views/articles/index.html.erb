<div class="row">
 <!-- Blog article Content Column -->
 <div class="col-lg-8">
<% @articles.each do |article| %>
 <!-- Blog article -->
<%= image_tag article.image.url, class: "img-responsive" %>
 <center><h4 style="font-size: 25.5px;"><%= link_to truncate(article.title, length: 50), article %></h4></center>
 <span class="glyphicon glyphicon-time media-heading pull-right"><%= time_ago_in_words(article.created_at)%> ago</span>
 <!-- Date/Time -->
 </p>
 <p>
   <%= image_tag article.user.avatar.url(:thumb), class:"img-responsive" %>By:<strong> <%= article.user.username %></strong>

 <hr>
<%=truncate(article.body, length: 200)%>
<hr>
<% end %>
<%= link_to "New article", new_article_path, class: "btn btn-primary btn-xs" %>
 </div>

<!-- Blog Sidebar Widgets Column -->
<div class="col-md-4">
 <div class="well commentcolor">
 <h4>Recent articles</h4>
 <% @recent.each do |a| %>
 <strong><%= link_to truncate(a.title, length: 30), a %></strong><br />
 Created by: <%= a.user.username %>
 <p><%= truncate(a.body, length:100) %></p>
 <% end %>
 </div>
</div>
</div>
<br>
<%= will_paginate @article %>
