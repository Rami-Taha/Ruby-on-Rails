<div class="media round">
<div class="pull-left">
  <%= comment.user.username %>
  <%= image_tag comment.user.avatar.url(:thumb), class:"img-responsive" %>
</div>
<div class="media-body">
  <p class="media-heading pull-right">
<%= time_ago_in_words(comment.created_at)%>
</p><br />

<%= comment.body%>
</div>
</div>
<br />
<%= link_to ' Edit', edit_article_comment_path(comment.article, comment), class: "btn btn-primary btn-xs round" %>
<%= link_to 'Delete', [comment.article, comment], method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs round" %>
